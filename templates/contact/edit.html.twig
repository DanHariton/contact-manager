{% extends 'base_site.html.twig' %}

{% block title %}
    {% if contact.id is not same as null %}
        {{ 'title.exist'|trans ~ ' - ' ~ contact.name }}
    {% else %}
        {{ 'title.new'|trans }}
    {% endif %}
{% endblock %}

{% block body %}
    <div class="container">
        <a href="{{ path('contact_list') }}" class="btn btn-primary mt-3">< {{ 'button.back'|trans }}</a>
        <div class="d-flex justify-content-between d-flex align-items-center">
            {% if contact.id is not same as null %}
                <h2 class="my-4">{{ 'title.exist'|trans }}&nbsp;-&nbsp;{{ contact.name }}</h2>
            {% else %}
                <h2 class="my-4">{{ 'title.new'|trans }}</h2>
            {% endif %}
            <a class="btn btn-danger btn-sm text-white" href="{{ path('contact_delete', {contact: contact.id}) }}">
                <i class="fa-solid fa-trash me-2"></i>{{ 'button.delete'|trans }}
            </a>
        </div>

        {{ form_start(form, {attr: {'novalidate': 'novalidate'}}) }}
        <div class="mx-auto">
            <div class="row mb-3">
                <div class="col-12 col-md-6">
                   {{ form_row(form.name) }}
                </div>
                <div class="col-12 col-md-6">
                    {{ form_row(form.surname) }}
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-12 col-md-6">
                    {{ form_row(form.email) }}
                </div>
                <div class="col-12 col-md-6">
                    {{ form_row(form.phone) }}
                </div>
            </div>
            {{ form_row(form.note) }}
            {{ form_row(form.submit, {noMargin: true}) }}
        </div>

        {{ form_end(form) }}

    </div>
{% endblock %}
